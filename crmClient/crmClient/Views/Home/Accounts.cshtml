@{
    ViewData["Title"] = "Home Page";
}


@model IEnumerable<crmClient.Models.AccountGetDto>

<div class="container" style="margin-top:50px !important">
    <table class="table">
        <tr>
            <th>
                Name
            </th>
            <th>
                Account type
            </th>
            <th>
                Type
            </th>
            <th>
                Telephone number
            </th>
            <th>
                Description
            </th>
            <th>
                Revenue
            </th>
            <th>
                State/Province
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.accType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address1_telephone1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.revenue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address1_stateorprovince)
                </td>
            </tr>
        }

    </table>
</div>


@if (User.Identity.IsAuthenticated)
{

    @using (Html.BeginForm("CreateAccount", "Home", FormMethod.Post))
    {
        <div class="container" style="margin-top:30px !important">
            <div class="form-group">
                <label for="Name">Name</label>
                <input type="text" class="form-control" name="name" id="Name" placeholder="Enter Name">
            </div>

            <div class="form-group">
                <label for="revenue">Revenue</label>
                <input type="number" class="form-control" name="revenue" id="revenue" placeholder="Enter Revenue">
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <input type="text" class="form-control" name="description" id="description" placeholder="Enter Description">
            </div>

            <div class="form-group">
                <label for="address1_telephone1">Address1 telephone1</label>
                <input type="tel" class="form-control" name="address1_telephone1" id="address1_telephone1" placeholder="Enter telephone">
            </div>

            <div class="form-group">
                <label for="address1_stateorprovince">Address1 State or Province</label>
                <input type="text" class="form-control" name="address1_stateorprovince" id="address1_stateorprovince" placeholder="Enter Address1 State or Province">
            </div>

            <div class="form-group">
                <label for="accountcategorycode">Select Account Category</label>
                <select id="accountcategorycode" name="accountcategorycode" class="form-control">
                    <option value="1">Preffered Customer</option>
                    <option value="2">Standard</option>
                </select>
            </div>

            <div class="form-group">
                <label for="customertypecode">Select Type</label>
                <select id="customertypecode" name="customertypecode" class="form-control">
                    <option value="1">Competitor</option>
                    <option value="2">Consultant</option>
                    <option value="3">Customer</option>
                    <option value="10">Supplier</option>
                    <option value="4">Investor</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

    }
}